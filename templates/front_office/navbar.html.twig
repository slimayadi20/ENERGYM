{% extends "base-front.html.twig" %}

{% block title %}
    Energym!
{% endblock %}

{% block body %}
<header class="main-header header-style-one">

    <!-- Header Top -->
    <div class="header-top">
        <div class="outer-container">
            <div class="clearfix">

                <!-- Top Left -->
                <div class="top-left pull-left">
                    <div class="text">Welcome to ENERGYM</div>
                </div>

                <!-- Top Right -->
                <div class="top-right pull-right">

                    <!-- Info List -->
                    <ul class="info-list">
                        <li><span class="icon fa fa-location-arrow"></span>{{temp }}</li>
                        <li><span class="icon fa fa-phone"></span> <a href="tel:+ (+216) 95 590 010"> (+216) 95 590 010</a></li>
                        <li><span class="icon fa fa-envelope-o"></span> <a href="mailto:info@example.com"> Energym@gmail.com</a></li>
                    </ul>

                    <!--Language-->
                    <div class="language dropdown"><a class="btn btn-default dropdown-toggle" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" href="#"><span class="flag-icon fa fa-globe"></span>EN &nbsp;<span class="icon fa fa-angle-down"></span></a>
                        <ul class="dropdown-menu style-one" aria-labelledby="dropdownMenu2">
                            <li><a href="#">English</a></li>
                            <li><a href="#">German</a></li>
                            <li><a href="#">Arabic</a></li>
                            <li><a href="#">Hindi</a></li>
                        </ul>
                    </div>

                </div>

            </div>
        </div>
    </div>

    <!-- Header Upper -->
    <div class="header-upper">
        <div class="outer-container clearfix">

            <div class="pull-left logo-box">
                <div class="logo"><a href="{{ path('front_office') }}"><img src="{{ asset('email/image-8.jpeg') }}"  width="80" title=""></a></div>
            </div>

            <div class="nav-outer clearfix">
                <!--Mobile Navigation Toggler-->
                <div class="mobile-nav-toggler"><span class="icon flaticon-menu"></span></div>
                <!-- Main Menu -->
                <nav class="main-menu navbar-expand-md">


                    <div class="navbar-collapse collapse clearfix" id="navbarSupportedContent">
                        <ul class="navigation clearfix">

                            <li class="current dropdown" ><a  href="{{ path('front_office') }}">Home</a>

                            <li class="dropdown"><a href="{{ path('salleFront') }}">salle</a>
                            <li class="dropdown"><a href="{{ path('shop') }}">Shop</a>


                            <li class="dropdown"><a href="{{ path('EvenementFront') }}">evenement</a>
                            <li class="dropdown"><a  href="{{ path('article_client_index') }}" >Blog</a>
                                {% if app.user %}
                            <li><a href="{{ path('app_logout') }}">DeConnect</a></li>
                            {% else %}
                                <li><a href="{{ path('app_login') }}">Connect</a></li>
                            {% endif %}
                            <li class="current dropdown"><a href="#">Also</a>
                                <ul>
                                    <li><a href="{{ path('reclamationFront') }}">Reclamation</a></li>
                                    <li><a href="{{ path('chat') }}">chat</a></li>
                                    {% if app.user  %}

                                    <li><a  href="{{ path('modifyUserFront', {'id': app.user.id}) }}">Edit Profile</a></li>
                                    {% endif %}

                                    {% if app.user  %}
                                        {% for role in app.user.roles %}
                                            {% if role != "ROLE_USER" %}
                                                <li><a href="{{ path('dashboard') }}">dashboard</a></li>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </ul>
                        </ul>
                    </div>
                </nav>

                <!-- Main Menu End-->
                <div class="outer-box clearfix">

                    <!-- Cart Box -->
                    <div class="cart-box">
                        <div class="dropdown">
                            <button class="cart-box-btn dropdown-toggle" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="flaticon-shopping-bag-1"></span><span class="total-cart">2</span></button>
                            <div class="dropdown-menu pull-right cart-panel" aria-labelledby="dropdownMenu3">

                                <div class="cart-product">
                                    {#   {% for element in dataPanier %}
                                    <div class="inner">

                                        <div class="image"><img src="{{ asset('uploads/produit/'~ element.produit.image)}}" alt=""></div>
                                        <h3><a href="shop-single.html">{{ element.produit.nom }}</a></h3>
                                        <div class="quantity-text">Quantit√© : {{ element.quantite }}</div>
                                        <div class="quantity-text">Prix Unitaire : {{ element.produit.prix }} TND</div>
                                    </div>

                                    {% endfor %} #}
                                    <ul class="btns-boxed">
                                        <li><a  href="{{ path('panier') }}">View Cart</a></li>
                                        <li><a href="{{ path('checkout') }}">CheckOut</a></li>
                                    </ul>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</header>
{% endblock %}
