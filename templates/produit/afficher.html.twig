

<div class="content-page">
    <!-- Start content -->
    <div class="content">
        <div class="container-fluid">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="row">
                <div class="col-12">
                    <div class="card-box table-responsive">
                        <h4 class="m-t-0 header-title">Gestion de Produit </h4>
                        <div>
                            <a  style=" position:absolute;right:10%;top:3% ;" class="btn btn-icon waves-effect waves-light btn-success m-b-5" href="{{ path('addproduit') }}"> <i class="fa fa-plus dark"></i> </a>
                        </div>
                        <table id="datatable" class="table table-bordered">
                            <thead>
                            <th>nom</th>
                            <th>description</th>
                            <th>prix</th>
                            <th>quantite</th>
                            <th>image</th>
                            <th>categories</th>
                            <th>edit</th>
                            <th>delete</th>
                            <th></th>
                            </thead>
                            <tbody>
                            {% for p in produit %}

                            <td>{{ p.nom }}</td>
                            <td>{{ p.description }}</td>
                            <td>{{ p.prix }}</td>
                            <td>{{ p.quantite }}</td>
                            <td><img src="{{ asset('Dashboard/images/profile.jpg')  }}" alt="" width="50">
                            </td>
                            <td>{{p.categories}}</td>




                            <td>
                                <a type="button" href="{{ path('modifyproduit', {'id': p.id}) }}" class="btn btn-primary btn-icon rounded-pill"><i class=" dripicons-document-edit"></i></a>
                            </td>
                            <td>
                                <form method="post" action="{{ path('deleteproduit', {'id': p.id}) }}"  onsubmit="return confirm('Voulez vous supprimer ce produit ?')">
                                    <input type="hidden" name="_method" value="SUP">
                                    <input type="hidden" name="_token" value="{{p.id }}">
                                    <button type="submit" value="supprimer" class="btn btn-danger btn-icon  rounded-pill"><i class="  ti-trash"></i></button>
                                </form>
                            </td>
                            <td> <a href="{{path("panier", {id: p.id})}}" class="btn btn-success">
                                    <i class="bi bi-cart-plus"></i> Ajouter
                                </a></td>
                            </tbody>

                            {% endfor %}

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
