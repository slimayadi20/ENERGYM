{% extends "base-back.html.twig" %}

{% block title %}Evenement!{% endblock %}


{% block body %}

    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">


                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                <div class="row" >
                    <div class="col-12">
                        <div class="card-box">
                            <div class="dropdown pull-right">
                                <a href="#" class="dropdown-toggle arrow-none card-drop" data-toggle="dropdown" aria-expanded="false">
                                    <i class="mdi mdi-dots-vertical"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Another action</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Something else</a>
                                    <!-- item-->
                                    <a href="javascript:void(0);" class="dropdown-item">Separated link</a>
                                </div>
                            </div>

                            <h4 class="m-t-0 header-title">Les événements</h4>
                            <form method="POST" class="form-horizontal" >
                            <div class="row" >
                                <select class="form-select" name="sort"  style="width: 50%"  >
                                    <option value="name">nom</option>
                                    <option value="nbr_exp">Etat </option>
                                    <option value="default">default </option>
                                </select>
                                <input type="submit" class="btn btn-purple btn-rounded " style="width: 20%" value="Trier">

                            </div>
                                </form>
                            <br>
                            <table class="table">
                                <thead class="thead-light">
                                <tr>

                                    <th>Nom</th>
                                    <th>Date </th>
                                    <th>Lieu</th>
                                    <th>Etat</th>
                                    <th>Image</th>
                                    <th>Modifier</th>
                                    <th>Supprimer</th>
                                    <th>Détail</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for e in Evenement %}
                                    <tr>


                                        <td>{{ e.NomEvent }}</td>
                                        <td>{{ e.DateEvent |date('Y-m-d') }}</td>
                                        <td>{{ e.LieuEvent }}</td>

                                        <td>
                                            {% if e.Etat=="Complet" %}
                                            <span class="badge badge-danger badge-pill">Complet</span>
                                            {% else %}
                                                <span class="badge badge-primary badge-pill">Incomplet</span>
                                            {% endif %}
                                                </td>
                                        <td  width="50"> <img class="card-img-top img-fluid" src="{{ asset('uploads/Event_image/' )~e.image  }}"   > </td>
                                        <td><a href="{{ path('ModifierEvent',{'id':e.id}) }}"><i class="fa fa-pencil" style="color:#00aff0;font-size:20px"></i> </a> </td>
                                        <td><a href="{{ path('SupprimerEvent',{'id':e.id}) }}"><i class="fa fa-trash" style="color:#ff5b5b;font-size:20px"></i> </a> </td>
                                        <td><a href="{{ path('detail',{'id':e.id}) }}"><i class="fa fa-list" style="color:#0eac5c;font-size:20px"></i> </a> </td>

                                    </tr>

                                {% endfor %}


                                </tbody>
                            </table>
                            <a href="{{ path('AjouterEvent') }}">
                                <button type="button" class="btn btn-purple btn-rounded w-md waves-effect waves-light m-b-5">Ajouter Un événement</button>

                            </a>
                        </div>

                    </div>


                </div>

            </div>
        </div>
    </div>


{% endblock %}
