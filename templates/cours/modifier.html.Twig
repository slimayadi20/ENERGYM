
{% extends "base-back.html.twig" %}

{% block body %}
    {{ include('Dashboard/navbar.html.twig') }}
    {{ include('Dashboard/leftSideBar.html.twig') }}

    <div class="content-page">
        <!-- Start content -->

        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <h4 class="m-t-0 header-title">create cours</h4>
                            <div class="row">
                                <div class="col-12">
                                    <div class="p-20">

                                        {{ form_start(form_cours) }}

                                        <form class="form-horizontal" role="form">

                                            <div class="form-group row">
                                                <label class="col-2 col-form-label">Nom</label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.nom) }}
                                                    {{ form_errors(form_cours.nom, {'attr':{'class':'text-danger mb-1 '}})}}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">Nom du Coach </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.nomCoach) }}
                                                    {{ form_errors(form_cours.nomCoach, {'attr':{'class':'text-danger mb-1 '}})}}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">jour </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.jour) }}
                                                    {{ form_errors(form_cours.jour, {'attr':{'class':'text-danger mb-1 '}})}}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">heure de debut </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.heureD) }}
                                                    {{ form_errors(form_cours.heureD, {'attr':{'class':'text-danger mb-1 '}})}}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">heure de fin </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.heureF) }}
                                                    {{ form_errors(form_cours.heureF, {'attr':{'class':'text-danger mb-1 '}})}}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">Nombre </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.nombre) }}
                                                    {{ form_errors(form_cours.nombre, {'attr':{'class':'text-danger mb-1 '}})}}
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">description </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.description) }}

                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">url image </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.image) }}


                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-2 col-form-label" for="example-email">Salle de Sport </label>
                                                <div class="col-10">
                                                    {{ form_widget(form_cours.salleassocie) }}
                                                    {{ form_errors(form_cours.salleassocie, {'attr':{'class':'text-danger mb-1 '}})}}
                                                </div>
                                            </div>

                                            <a class="btn btn-primary" href="{{ path('cours') }}">Retour</a>
                                            <input type="submit" value="modifier"   class="btn btn-success">
                                            {{ form_end(form_cours) }}

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
