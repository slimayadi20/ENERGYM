
{% extends "base-back.html.twig" %}
{% block body %}
    {{ render(path('notification', {max: 3})) }}
    {{ include('Dashboard/leftSideBar.html.twig') }}

    <div class="spinner-grow" role="status">
        <span class="sr-only">Loading...</span>
    </div>
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card-box">
                            <h4 class="m-t-0 header-title">repondre a  </h4>
                            <div class="row">
                                <div class="col-12">
                                    <div class="p-20">
                                        {{ form_start(form_reclamation, {attr: {novalidate: 'novalidate'}}) }}

                                        <div class="form-group row">
                                            <label class="col-2 col-form-label" for="example-email">Contenu</label>
                                            <div class="col-10">
                                                {{ form_widget(form_reclamation.Contenu) }}
                                                {{ form_errors(form_reclamation.Contenu, {'attr':{'class':'text-danger mb-1 '}})}}
                                            </div>
                                        </div>
                                        <div class="form-group row" style="display: none;">
                                            <label class="col-2 col-form-label" for="example-email">email</label>
                                            <div class="col-10">
                                                {{ form_widget(form_reclamation.EmailReceiver) }}
                                                {{ form_errors(form_reclamation.EmailReceiver, {'attr':{'class':'text-danger mb-1 '}})}}
                                            </div>
                                        </div>
                                        <div class="form-group row" style="display: none;">
                                            <label class="col-2 col-form-label" for="example-email">email</label>
                                            <div class="col-10">
                                                {{ form_widget(form_reclamation.EmailSender) }}
                                                {{ form_errors(form_reclamation.EmailSender, {'attr':{'class':'text-danger mb-1 '}})}}
                                            </div>
                                        </div>
                                        <a class="btn btn-primary" href="{{ path('reclamation') }}">Retour</a>
                                        <input type="submit" value="ajouter"   class="btn btn-success">
                                        {{ form_end(form_reclamation) }}

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}


