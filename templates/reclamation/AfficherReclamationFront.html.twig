{% extends "base-front.html.twig" %}

{% block title %}
    Reclamation!
{% endblock %}

{% block body %}
    {{ render(path('temp', {max: 3})) }}
<section class="page-title" style="background-image:url()">
    <div class="auto-container">
        <div class="clearfix">
            <div class="pull-left">
                <h2>Postez vos Reclamation ! </h2>
                <div class="text"></div>
            </div>
            <div class="pull-right">
                <ul class="page-breadcrumb">
                    <li><a href="{{ path ('front_office') }}">home</a></li>
                    <li>Reclamation</li>
                </ul>
            </div>
        </div>
    </div>
</section>
    <br>
    <section class="contact-form-section">
        <div class="auto-container">

            <div class="row clearfix">

                <!-- Title Column -->
                <div class="title-column col-lg-4 col-md-12 col-sm-12">
                    <div class="inner-column">
                        <!-- Sec Title -->
                        <div class="sec-title">
                            <div class="title">Contact Now</div>
                            <h2>Ask Us <br> Anything</h2>
                        </div>
                        <div class="text">Envoyez-nous toutes vos demandes d'information, propositions et commentaires sur les offres et les services .

                            .</div>
                    </div>
                </div>

                <!-- Form Column -->
                <div class="form-column col-lg-8 col-md-12 col-sm-12">
                    <div class="inner-column">

                        <!-- Default Form -->
                        <div class="default-form style-two contact-form">
                            {{
                            form_start(form_reclamation,
                                {
                                    'attr'
                                    :
                                    {
                                        'novalidate'
                                        :
                                        'novalidate'
                                    }})
                            }}
                            <!-- Default Form -->
                            <form method="post" action="sendemail.php" id="contact-form" novalidate="novalidate">
                                <div class="row clearfix">

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        {{ form_widget(form_reclamation.produit, { 'attr': {'class': 'ui-selectmenu-button ui-selectmenu-button-closed ui-corner-all ui-button ui-widget','placeholder': 'Ajouter un produit achet√©'} }) }}
                                        {{ form_errors(form_reclamation.produit, { 'attr': {'class': 'form-control'} }) }}                                    </div>

                                    <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                        {{ form_widget(form_reclamation.titre, { 'attr': {'class': 'form-control','placeholder': 'Ecrire un titre..'} }) }}
                                        {{ form_errors(form_reclamation.titre, { 'attr': {'class': 'form-control'} }) }}
                                    </div>



                                    <div class="form-group col-lg-12 col-md-12 col-sm-12">
                                        {{ form_widget(form_reclamation.contenu, { 'attr': {'class': 'form-control' ,'placeholder': 'Ecrire un Contenu..'} }) }}
                                        {{ form_errors(form_reclamation.contenu, { 'attr': {'class': 'form-control'} }) }}                                    </div>

                                    <div class="form-group clearfix col-lg-12 col-md-12 col-sm-12">
                                        <div class="btn-three-outer"><button class="theme-btn btn-style-three" type="submit" name="submit-form"><span class="txt">SEND MESSAGE</span></button></div>
                                    </div>
                                    {{ form_end(form_reclamation) }}

                                </div>
                            </form>

                            <!--End Default Form -->
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>
    <br>
    {{ include('front_office/footer.html.twig') }}
{% endblock %}